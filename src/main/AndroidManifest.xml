<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clock.systemui">

    <application
        android:name=".SystemUiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.translucentbar.ImageTranslucentBarActivity"
            android:label="@string/image_translucent_bar"
            android:theme="@style/ImageTranslucentTheme" />
        <activity
            android:name=".ui.translucentbar.ColorTranslucentBarActivity"
            android:label="@string/color_translucent_bar"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name=".ui.toolbar.ToolBarActivity"
            android:label="@string/tool_bar"
            android:theme="@style/Theme.ToolBar.Base" />
        <activity
            android:name=".ui.toolbar.ZhiHuActivity"
            android:label="@string/zhi_hu"
            android:theme="@style/Theme.ToolBar.ZhiHu" />
        <activity
            android:name=".ui.toolbar.NetEaseMusicActivity"
            android:label="@string/net_ease_music" />

    </application>

</manifest>
