<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_translucent_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translucent Bar Demo" />

    <Button
        android:id="@+id/btn_toolbar_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToolBar Demo" />

    <Button
        android:id="@+id/btn_navigation_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigation Demo" />

    <Button
        android:id="@+id/btn_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CardView Demo" />

    <Button
        android:id="@+id/btn_snack_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SnackBar Demo" />

    <Button
        android:id="@+id/btn_bar_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AppBarLayout + TabLayout" />

</LinearLayout>
